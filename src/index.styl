// -- ShowCaseDemo
.ShowCaseDemo
  &-title,
  &-subtitle
    font-size 2.4rem
    color #FFF
    line-height 1.33
    margin-bottom 4.8rem
    font-weight 600

    @media (min-width $mq-md)
      font-size 3.6rem
      line

  &-item
    margin-bottom 3.2rem

    @media (max-width $mq-sm-max)
      text-align center

    @media (min-width $mq-md)
      &--odd
        text-align right

  &-subtitle
    font-size 2rem
    line-height 1.6
    margin-bottom 1.6rem

    @media (min-width $mq-md)
      line-height 1.33
      margin-top 5rem
      margin-bottom 2.4rem

  &-text
    color #FFF

  &-figure
    background-position center
    display block
    margin 0

    @media (max-width $mq-sm-max)
      margin-bottom 2.7rem

    img
      display block
      width 100%

  &-testimonial
    @media (max-width $mq-sm-max)
      margin-bottom 2.7rem


// -- AdvantagesSection
.AdvantagesSection
  padding 7.2rem 0
  text-align center
  background #FFF

  &-title
    margin-bottom 5.6rem
    font-size 2.4rem
    line-height 1.33
    font-weight 600
    color $color-cerulean

    @media (min-width $mq-md)
      font-size 36px

  &-item
    margin-bottom 5.4rem

  figure
    min-height 11rem
    display block
    margin 0 auto 2.4rem
    display flex

  svg
    height 100%
    display block

.h2
  font-size 3.6rem
  line-height 1.33

h3,
.heading-h3
  font-size 2.4rem
  line-height 1.33
  margin-bottom 1em
  color $color-cerulean

.u-arrow-after
  position relative
  z-index 10

  &:after
    content ''
    position absolute
    bottom 0
    left 0
    width 0
    height 0
    border-left 50vw solid transparent
    border-right 50vw solid transparent
    border-top 3.8rem solid $color-white-lilac
    transform translateY(100%)

  @media (min-width $mq-md)
    &:after
      border-top: 7rem solid $color-white-lilac

.u-text-left,
.text-left
  text-align left

.u-text-center,
.text-center
  text-align center

.u-text-right,
.text-right
  text-align right

.u-m-t
  margin-top 1.6rem !important

.u-m-b
  margin-bottom 1.6rem !important

.u-m-b-3
  margin-bottom unit(1.6 * 3, rem) !important

.u-n-m-b
  margin-bottom 0 !important

.sr-only
  position absolute
  width 1px
  height 1px
  padding 0
  overflow hidden
  clip rect(0, 0, 0, 0)
  white-space nowrap
  -webkit-clip-path inset(50%)
  clip-path inset(50%)
  border 0

.clearfix
  &:before,
  &:after
    content ' '
    display table

.color-white
  color #FFF !important


