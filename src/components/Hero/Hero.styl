.Hero
  background-size cover
  background-position center
  background-repeat no-repeat
  color #FFF
  display flex
  padding 9.5rem 0 4.0rem

  @media (min-width $mq-sm)
    padding-top unit(6.6 + 4.8, 'rem')
    padding-bottom 4.8rem

  @media (min-width $mq-lg)
    min-height 43rem
    align-items center

    &-container
      margin-top 0
      margin-bottom 0

  &-container
    margin-top auto
    margin-bottom auto

  &-title
    margin 0 0 1.6rem
    font-size 4.8rem
    line-height 1.17

  &-lead
    font-size 1.6rem
    line-height 1.5em
    margin 0
