.Hero
  background-size cover
  background-position center
  background-repeat no-repeat
  color #FFF
  display flex

  @media (max-width $mq-xs-max)
    padding 9.5rem 0 4.0rem

  @media (min-width $mq-sm)
    min-height 43rem

  &-container
    margin-top auto
    margin-bottom auto

  &-title
    margin 0 0 1.6rem
    font-size 4.8rem
    line-height 1.17

  &-lead
    font-size 1.6rem
    line-height 1.5em
    margin 0
